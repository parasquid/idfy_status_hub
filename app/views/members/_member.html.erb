<div class="member-card media" id="member-<%= member.id_api %>" data-id="<%= member.id_api %>">
  <div class="media-left">
    <%= image_tag member.image, size: "160x160", class: "media-object" %>
    <div class="actions">
      <%= button_to home_favourite_path(member.id_api), {
        remote: true,
        class: "btn btn-default favourite #{is_favourite_class(member.id_api)}"
        } do %>
        <span class="glyphicon glyphicon-heart"></span>
      <% end %>&nbsp;
      <button class="btn btn-default download"><span class="glyphicon glyphicon-download-alt"></span></button>&nbsp;
      <button class="btn btn-default share"><span class="glyphicon glyphicon-share"></span></button>
    </div>
  </div>
  <div class="media-body">
    <div class="ethnicity"><%= member.ethnicity_string %></div>
    <blockquote><p><%= member.status %></p></blockquote>
    <div class="information">
      <span class="label label-default">drinks: <% if member.drink %>
        <span class="glyphicon glyphicon-ok"></span>
      <% else %>
        <span class="glyphicon glyphicon-remove"></span>
      <% end %></span>&nbsp;
      <span class="label label-default">vegan: <% if member.is_veg %>
        <span class="glyphicon glyphicon-ok"></span>
      <% else %>
        <span class="glyphicon glyphicon-remove"></span>
      <% end %></span>&nbsp;
      <span class="label label-default">weight: <%= member.weight_in_kg %> kg</span>&nbsp;
      <span class="label label-default">height: <%= member.height %> cm</span>
    </div>
  </div>
</div>